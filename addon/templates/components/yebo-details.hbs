<form>
  <fieldset>
    <legend>Order Details</legend>
    <div class="row">
      <div class="small-6 columns">
        <h6>Total dos items:</h6>
      </div>
      <div class="small-6 columns text-right">
        <h6>{{order.displayItemTotal}}</h6>
      </div>
    </div>

    {{#if order.shipmentTotal}}
      <div class="row">
        <div class="small-6 columns">
          <h6>Entrega:</h6>
        </div>
        <div class="small-6 columns text-right">
          <h6>{{order.displayShipmentTotal}}</h6>
        </div>
      </div>
    {{/if}}

    {{#if order.includedTaxTotal}}
      <div class="row">
        <div class="small-6 columns">
          <h6>Impostos:</h6>
        </div>
        <div class="small-6 columns text-right">
          <h6>{{order.displayIncludedTaxTotal}}</h6>
        </div>
      </div>
    {{/if}}

    {{#if order.promoTotal}}
      <div class="row">
        <div class="small-6 columns">
          <h6>Promoção:</h6>
        </div>
        <div class="small-6 columns text-right">
          <h6>{{order.promoTotal}}</h6>
        </div>
      </div>
    {{/if}}


    <div class="row">
      <div class="small-6 columns">
        <h6>Total do pedido:</h6>
      </div>
      <div class="small-6 columns text-right">
        <h6>{{order.displayTotal}}</h6>
      </div>
    </div>

  </fieldset>
</form>
