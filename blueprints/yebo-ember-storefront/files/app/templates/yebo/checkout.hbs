<div class="row">
  <div class="small-12 columns">
    <h1>Checkout</h1>
  </div>

  <div class="small-12 columns">
    {{yebo-breadcrumbs checkoutState=yebo.checkouts.currentState checkoutSteps=yebo.currentOrder.checkoutSteps}}
  </div>

  {{#unless yebo.checkouts.isInConfirm}}
    <div class="small-12 large-4 columns right">
      {{yebo-details order=yebo.currentOrder}}
    </div>
  {{/unless}}

  <div {{bind-attr class=":small-12 yebo.checkouts.isInConfirm:large-12:large-8 :columns"}}>
    {{yebo-checkout}}
  </div>
</div>
